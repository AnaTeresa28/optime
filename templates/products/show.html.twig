{% extends 'base.html.twig' %}

{% block title %}
    {{
        parent()
    }}
{% endblock %}

{% block body %}

   {{ parent() }}
   <div class="container marketing">
      <hr class="featurette-divider">
        <div class="row featurette">
                <h1>Producto: {{ product.name }}</h1>
                        <table class="table">
                            <tbody>
                                <tr>
                                    <th>Id</th>
                                    <td>{{ product.id }}</td>
                                </tr>
                                <tr>
                                    <th>Code</th>
                                    <td>{{ product.code }}</td>
                                </tr>
                                <tr>
                                    <th>Name</th>
                                    <td>{{ product.name }}</td>
                                </tr>
                                <tr>
                                    <th>Description</th>
                                    <td>{{ product.description }}</td>
                                </tr>
                                <tr>
                                    <th>Brand</th>
                                    <td>{{ product.brand }}</td>
                                </tr>
                                <tr>
                                    <th>Price</th>
                                    <td>{{ product.price }}</td>
                                </tr>
                                <tr>
                                    <th>CreatedAt</th>
                                    <td>{{ product.createdAt ? product.createdAt|date('Y-m-d') : '' }}</td>
                                </tr>
                                <tr>
                                    <th>UpdatedAt</th>
                                    <td>{{ product.updatedAt ? product.updatedAt|date('Y-m-d') : '' }}</td>
                                </tr>
                            </tbody>
                        </table>

                        <a href="{{ path('products_edit', {'id': product.id}) }}" data-bs-toggle="tooltip" data-bs-placement="top" title="Editar">
                         <button class="btn btn-light primary" " data-bs-toggle="tooltip" data-bs-placement="top" title="Eliminar" style="color: #0d6efd;">
                            {{ include('buttons/buttonEditar.html.twig') }}
                         </button>
                        </a>
                        {{ include('products/_delete_form.html.twig') }}
                </div>
        <hr class="featurette-divider">
    </div>
{% endblock %}
