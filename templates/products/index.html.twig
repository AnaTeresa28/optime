{% extends 'base.html.twig' %}

{% block title %}
  {{
    parent()
  }}
{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="container marketing">
      <hr class="featurette-divider">
        <h1 style="text-align: center;">Lista de Productos</h1>
                    <table id="example" class="table table-striped table-bordered" style="width:100%">
                        <thead style="background: rgba(28,186,204,.95);">
                            <tr style="text-align: center;">
                                <th>Id</th>
                                <th>Código</th>
                                <th>Nombre</th>
                                <th>Descripción</th>
                                <th>Brand</th>
                                <th>Precio</th>
                                <th>Fecha de creación</th>
                                <th>Fecha de Actualización</th>
                                <th>Categoría</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for product in products %}
                            <tr style="text-align: center;">
                                <td>{{ product.id }}</td>
                                <td>{{ product.code }}</td>
                                <td>{{ product.name }}</td>
                                <td>{{ product.description }}</td>
                                <td>{{ product.brand }}</td>
                                <td>{{ product.price }}</td>
                                <td>{{ product.createdAt ? product.createdAt|date('Y-m-d') : '' }}</td>
                                <td>{{ product.updatedAt ? product.updatedAt|date('Y-m-d') : '' }}</td>
                                <td>{{ product.category }}</td>
                                <td>

                                   <a style="padding: 8px;" href="{{ path('products_show', {'id': product.id}) }}" data-bs-toggle="tooltip" data-bs-placement="top" title="Ver Detalle">
                                        {{ include('buttons/buttonVer.html.twig') }}
                                    </a>

                                    <a style="padding: 8px;" href="{{ path('products_edit', {'id': product.id}) }}" data-bs-toggle="tooltip" data-bs-placement="top" title="Editar">
                                        {{ include('buttons/buttonEditar.html.twig') }}
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="9">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                        <a href="{{ path('products_new') }}" data-bs-toggle="tooltip" data-bs-placement="top" title="Agregar nuevo Producto">
                          {{ include('buttons/buttonAgregar.html.twig') }}
                        </a>
        <hr class="featurette-divider">
    </div>
{% endblock %}
